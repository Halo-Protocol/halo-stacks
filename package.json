{
  "name": "halo-protocol-stacks",
  "version": "2.0.0",
  "description": "Halo Protocol - Decentralized lending circles with on-chain credit scoring on Stacks",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "vitest run",
    "test:api": "vitest run --config vitest.api.config.ts",
    "test:frontend": "vitest run --config vitest.frontend.config.ts",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate",
    "deploy:testnet": "node --env-file-if-exists=.env.local --import tsx scripts/deploy-testnet.ts --execute",
    "deploy:testnet:dry-run": "node --env-file-if-exists=.env.local --import tsx scripts/deploy-testnet.ts --dry-run",
    "deploy:verify": "node --env-file-if-exists=.env.local --import tsx scripts/verify-deployment.ts",
    "test:e2e": "npx playwright test",
    "playwright:install": "npx playwright install chromium",
    "db:seed": "npx prisma db seed",
    "wallet:generate": "npx tsx scripts/generate-wallet.ts new",
    "wallet:from-mnemonic": "npx tsx scripts/generate-wallet.ts from-mnemonic"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.3.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@stacks/blockchain-api-client": "^8.1.0",
    "@stacks/clarinet-sdk": "^3.9.0",
    "@stacks/connect": "^8.2.4",
    "@stacks/network": "^7.0.0",
    "@stacks/transactions": "^7.2.0",
    "@stacks/wallet-sdk": "^7.2.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.4.0",
    "autoprefixer": "^10.4.24",
    "chokidar-cli": "^3.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.563.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.19",
    "vitest": "^4.0.7",
    "vitest-environment-clarinet": "^3.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.3",
    "jsdom": "^28.0.0",
    "prisma": "^6.3.0",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  }
}
