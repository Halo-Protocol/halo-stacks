# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=  # Generate with: openssl rand -base64 32

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/halo_protocol

# Halo Identity
HALO_ID_SALT=  # Generate with: openssl rand -hex 32

# Stacks Blockchain (server-side)
STACKS_NETWORK=testnet  # testnet or mainnet
STACKS_API_URL=https://api.testnet.hiro.so
DEPLOYER_ADDRESS=  # Contract deployer STX address
DEPLOYER_PRIVATE_KEY=  # Private key for deployer wallet (faucet mint transactions)

# Stacks Blockchain (client-side — NEXT_PUBLIC_ prefix required)
NEXT_PUBLIC_STACKS_NETWORK=testnet
NEXT_PUBLIC_DEPLOYER_ADDRESS=  # Same as DEPLOYER_ADDRESS
NEXT_PUBLIC_STACKS_API_URL=https://api.testnet.hiro.so

# Frontend (CORS — same-origin if frontend is in this app)
FRONTEND_URL=http://localhost:3000

# Admin
ADMIN_API_KEY=  # API key for admin endpoints (sync, etc.)
